{
  "compilerOptions": {
    "target": "es2024",
    "module": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "noUnusedLocals": false, // Verifica par√¢metros locais nao usados
    "noUnusedParameters": true, // Verifica parametros nao usados
    // "outDir": "./" - Gera os arquivos em outra pasta
    // "outFile": "./build/app.js" - Gera um diretorio, onde junta todos os codigos das paginas
    "experimentalDecorators": true
  }
}
